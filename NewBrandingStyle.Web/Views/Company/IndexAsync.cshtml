@model CompanyModel

<h1>Add new Company with AJAX</h1>

<div id="alert" class="alert alert-success" style="display: none;">Success!</div>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Item name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Item description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="IsVisible" class="form-check-input" />
        <label asp-for="IsVisible" class="form-check-label">Item visible?</label>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Add new item" />
    </div>
</form>

<div id="itemsWrapper" class="hidden">
    <h1>Data from db</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">IsVisible</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/Company/addNewItem.js"></script>
    <script src="~/js/Company//loadItems.js"></script>
}
